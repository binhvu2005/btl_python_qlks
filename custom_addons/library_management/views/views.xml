<odoo>
  <data>

    <!-- ACTION & MENU -->
    <record id="action_library_book" model="ir.actions.act_window">
      <field name="name">Tất cả đầu sách</field>
      <field name="res_model">library.book</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_library_root" name="Thư viện"/>
    <menuitem id="menu_library_books" name="Quản lý Sách" parent="menu_library_root"/>
    <menuitem id="menu_library_all_books" name="Tất cả đầu sách" parent="menu_library_books" action="action_library_book"/>

    <!-- TREE VIEW -->
    <record id="view_library_book_tree" model="ir.ui.view">
      <field name="name">library.book.tree</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <tree decoration-danger="state=='borrowed'" decoration-success="state=='available'" decoration-muted="state=='lost'">
          <field name="name"/>
          <field name="isbn"/>
          <field name="category_id"/>
          <field name="author_ids" widget="many2many_tags"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_library_book_form" model="ir.ui.view">
      <field name="name">library.book.form</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <h2>
              <field name="isbn"/>
            </h2>

            <field name="condition_level" widget="priority" invisible="0"/>

            <group>
              <group>
                <field name="category_id" options="{'no_create': True}"/>
              </group>
              <group>
                <field name="author_ids" widget="many2many_tags"/>
              </group>
            </group>

            <notebook>
              <page string="Lịch sử mượn trả">
                <field name="loan_ids">
                  <tree editable="bottom">
                    <field name="borrower_name"/>
                    <field name="borrow_date"/>
                    <field name="return_date"/>
                    <field name="is_returned"/>
                    <field name="duration"/>
                  </tree>
                </field>
              </page>

              <page string="Thông tin Kho" groups="library_management.group_library_librarian">
                <group>
                  <field name="purchase_price"/>
                  <field name="purchase_date"/>
                </group>
              </page>

            </notebook>

            <group>
              <field name="short_description"/>
              <field name="days_since_purchase"/>
              <field name="total_loans"/>
              <field name="notes"/>
            </group>

          </sheet>
        </form>
      </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_library_book_search" model="ir.ui.view">
      <field name="name">library.book.search</field>
      <field name="model">library.book</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="isbn"/>
          <filter string="Sách có sẵn" domain="[('state','=', 'available')]"/>
          <filter string="Sách mới nhập" domain="[('state','=', 'draft')]"/>
          <separator/>
          <filter string="Thể loại" context="{'group_by':'category_id'}"/>
          <filter string="Tác giả" context="{'group_by':'author_ids'}"/>
        </search>
      </field>
    </record>

  </data>
</odoo>
